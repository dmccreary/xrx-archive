@import url(xml2html.css);

body {
	overflow-y: scroll;
}

button {
	border: 1px solid black;
	background-color: white;
}

#messages {
    height: 1.5em;
}

#errors {
    position: relative;
    margin-top: 5px;
    color: #AF0024;
    overflow: auto;
    padding: 3px;
    border: 1px solid #AF0024;
    margin-bottom: 4px;
}

#error-close {
    position: absolute;
    left: 0px;
    bottom: 0px;
    background-color: #AF0024;
    color: white;
    padding: 4px;
    text-decoration: none;
}

.errors-found {
    color: #AF0024;
    font-weight: bold;
}

#maximize {
	float: right;
}

#query-panel {
	background-color: #BBB;
	padding: 3px;
	border: solid 1px black;
}

fieldset {
	margin: 5px 0;
    border: 0;
}

#open {
    margin-right: 10px;
}

label:after {
	content: ': ';
}

label {
	padding-right: 7px;
}

#saved {
	width: 200px;
}

fieldset.bottom {
	border: 0;
	text-align: right;
	margin-top: 3px;
}

fieldset select {
	margin-right: 20px;
}

#buttons {
	float: left;
}

#submit {
	margin-right: 10px;
}

#description, #path {
	min-width: 500px;
}

#wrapper, #docname {
	min-width: 200px;
}

#query-output {
	background-color: #BBB;
	margin-top: 5px;
	padding: 0 3px 3px 5px;
	border: 1px solid black;
}

#query-result {
	margin-top: 10px;
	height: 1em;
}

#navbar {
	width: auto;
	border: 0;
	font-size: 75%;
	margin-bottom: 10px;
}

#previous {
	float: left;
}

#current {
	text-align: center;
	color: white;
	font-weight: bold;
}

#next {
	float: right;
}

#output {
	font-size: 85%;
	overflow: auto;
	background-color: white;
}

.item {
	min-height: 2.5em;
}

/* Hack for internet explorer */
/*\*/
* html .item {
	height: 2.5em;
}

.even {
	background-color: #CDE9FF;
}

.pos {
	float: left;
	background-color: #ECF;
	font-size: 1.25em;
	padding: 2px;
	margin-right: 5px;
}

.yui-skin-sam .yui-dt-body { cursor:pointer; } /* when rows are selectable */

.is-collection {
    font-weight: bold;
    color: #0044FF;
}

.file-dialog {
    font-size: 75%;
}

.file-dialog label {
    width: 130px;
    float: left;
}

.file-dialog .wrapper-select {
    border-top: 1px solid black;
    padding-top: 10px;
}

.dbbrowser-table {
    height: 15em;
    overflow: auto;
}

.dbbrowser-table .yui-dt-table {
    width: 100%;
}