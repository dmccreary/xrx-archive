<?xml version="1.0" encoding="UTF-8"?>
<app-info xmlns="http://code.google.com/p/xrx">
    <app-id>audit</app-id>
    <app-name>Security Audits</app-name>
    <app-version-id>1.0</app-version-id>
    <app-subversion-revision-number/>
    <app-description-text>Runs a series of security audits to
    show what changes have been made by what users and when these changes
    have been made.</app-description-text>
    <app-creator-text>Dan McCreary</app-creator-text>
    <app-license-type-code>apache-2.0</app-license-type-code>
    <app-license-uri>text</app-license-uri>
    <breadcrumb-label>Audit</breadcrumb-label>
    <data-collection>data</data-collection>
    <app-icon-path>images/audit.png</app-icon-path>
    <main-menu-order>12</main-menu-order>
    <include-in-search-indicator>true</include-in-search-indicator>
    <doc-root-path>item</doc-root-path>
    <doc-id-path>id/text()</doc-id-path>
    <doc-title-path>text</doc-title-path>
    <list-items-uri>views/list-items.xq</list-items-uri>
    <doc-viewer-uri>views/view-item.xq?id=</doc-viewer-uri>
    <search-order-weight>5</search-order-weight>
    <app-notes-text>text</app-notes-text>
    <app-help-uri>help/index.xhtml</app-help-uri>
    <include-in-new-indicator>false</include-in-new-indicator>
    <app-new-uri>text</app-new-uri>
    <classifiers>
        <classifier>security</classifier>
        <classifier>administration</classifier>
    </classifiers>
    <permissions>
        <!-- by default, admin will have all permissions -->
        <permission>
            <role>auditor</role>
            <action>view</action>
        </permission>
    </permissions>
</app-info>