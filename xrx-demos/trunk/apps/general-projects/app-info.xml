<?xml version="1.0" encoding="UTF-8"?>
<app-info xmlns="http://code.google.com/p/xrx">
    <app-id>general-projects</app-id>
    <app-name>General Projects</app-name>
    <app-version-id>1.0</app-version-id>
    <app-description-text>General Project Manager Application specific to the creation of information sharing projects.</app-description-text>
    <app-creator-text>Dan McCreary</app-creator-text>
    <app-license-type-code>commercial</app-license-type-code>
    <app-license-uri>http://www.crossflo.com/license.html</app-license-uri>
    <breadcrumb-label>General Project Manager</breadcrumb-label>
    <app-classifier-code>product</app-classifier-code>
    <data-collection>data</data-collection>
    <app-icon-path>images/project-manager.png</app-icon-path>
    <main-menu-order>20</main-menu-order>
    <include-in-search-indicator>true</include-in-search-indicator>
    <doc-root-path>ProjectDocument</doc-root-path>
    <doc-id-path>id/text()</doc-id-path>
    <doc-title>ProjectName/text()</doc-title>
    <doc-viewer-path>views/view-item.xq</doc-viewer-path>
    <search-order-weight>1</search-order-weight>
    <app-notes-text>Sample application for creating new project applications.</app-notes-text>
    <classifiers>
        <classifier>software-development-lifecycle</classifier>
    </classifiers>
    <permissions>
        <!-- by default, admin will have all permissions -->
        <permission>
            <role>developer</role>
            <action>edit</action>
        </permission>
        <permission>
            <role>editor</role>
            <action>edit</action>
        </permission>
        <permission>
            <role>content-approver</role>
            <action>publish</action>
        </permission>
        <permission>
            <role>auditor</role>
            <action>view</action>
        </permission>
    </permissions>
</app-info>