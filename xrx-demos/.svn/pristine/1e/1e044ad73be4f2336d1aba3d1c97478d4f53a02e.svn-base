@namespace xf url("http://www.w3.org/2002/xforms");

/* Makes the labels right aligned in a 200px wide column that floats to the left of the input controls. */
xf|input > xf|label, xf|select > xf|label, xf|select1 > xf|label, xf|textarea > xf|label 
{text-align:right; padding-right:10px; width:160px; float:left; text-align:right;}

/* this sets the with of the input text boxes */
.task-name .xf-value  {width: 50ex;}

.resource .xf-value  {width: 70ex;}

xf|repeat  xf:trigger {display: inline; border: solid red 1px; position: relative;}

/* add this to all inputs where you do not  want the delete to appear on a new line */

.inline-delete {display: inline;}

.task-description textarea { 
   height: 5em;
   width: 600px;
}