<?xml version="1.0" encoding="UTF-8"?>
<app-info xmlns="http://code.google.com/p/xrx">
    <app-id>shop</app-id>
    <app-name>Metadata Shopper</app-name>
    <app-version-id>1.0</app-version-id>
    <app-description-text>Metadata shopper.</app-description-text>
    <app-creator-text>Dan McCreary</app-creator-text>
    <app-license-type-code>crossflo</app-license-type-code>
    <app-license-uri>http://www.crossflo/licenses/license.html</app-license-uri>
    <breadcrumb-label>Metadata Shopper</breadcrumb-label>
    <data-collection>data</data-collection>
    <app-icon-path>images/shopping-cart.png</app-icon-path>
    <main-menu-order>6</main-menu-order>
    <include-in-search-indicator>true</include-in-search-indicator>
    <doc-root-path>w:Wantlist</doc-root-path>
    <doc-id-path>id/text()</doc-id-path>
    <doc-title>title/text()</doc-title>
    <doc-viewer-path>views/view-item.xq</doc-viewer-path>
    <search-order-weight>3</search-order-weight>
    <app-notes-text>The reporting tool currently only works with data elements.</app-notes-text>
    <classifiers>
        <classifier>metadata</classifier>
    </classifiers>
    <permissions>
        <!-- by default, admin will have all permissions -->
        <permission>
            <role>developer</role>
            <action>edit</action>
        </permission>
        <permission>
            <role>editor</role>
            <action>view</action>
        </permission>
    </permissions>
</app-info>